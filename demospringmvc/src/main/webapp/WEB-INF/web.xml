<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="
         http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <display-name>Archetype Created Web Application</display-name>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <!-- context param la 1 spring context co the truy cap bat ki servlet nao trong servlet cua chung ta
     cung giong nhu cau hinh o day de access vao trong toan bo servlet controller cua spring mvc, voi duong
     dan thu muc phai dung voi duong dan thu muc da chi dinh, ten file dat sao cung duoc-->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/dispatcher-servlet.xml</param-value>
    </context-param>

    <!-- Spring MVC -->
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

<!--    cau hinh welcome-file-list o day thi mac dinh no nhan trong thu muc goc la webapp va di vao file-->
<!--    index.jsp, khi do cau url mac dinh ban dau khi quet vao no se khong nhan cau hinh trong request-->
<!--    GetController-->

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
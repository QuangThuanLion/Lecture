<?xml version="1.0" encoding="UTF-8"?>

<!--khai bao 1 list cac bean tu spring context-->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <mvc:annotation-driven/>
    <!-- spring context de dua co the scan toan bo nhung file trong thu package nay co the dua vao
    container bean dua vao spring context cua no-->
    <!-- Activates scanning of @Repository and @Service and @Component -->
    <context:component-scan base-package="com.mvc.project"/>

    <!-- khai bao de cau hinh cho view xu ly thu muc chua view va duoi cua view la gi-->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/"/>
        <property name="suffix" value=".jsp"/>
    </bean>
</beans>